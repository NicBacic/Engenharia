<head>
    <title>Rotten Pxls - <%= @jogo.nome %></title>
</head>

<p id="notice"><%= notice %></p>

<div class="text-center">
<h2> <%= @jogo.nome %> </h2>

<div class="tab">
<p>
  <strong>Publisher:</strong>
  <%= @jogo.publisher %>
</p>

<p>
  <strong>Desenvolvedora:</strong>
  <%= @jogo.desenvolvedora %>
</p>

<p>
  <strong>Rating:</strong>
  <%= @jogo.rating %>
</p>

<p>
  <strong> Avaliar:</strong>
	<div class="input-group">
  <select class="form-control input-sm centered-select">
    <option value="-"> - </option>
    <option value="10">(10) Masterpiece</option>
    <option value="9">(9) Great</option>
    <option value="8">(8) Very Good</option>
    <option value="7">(7) Good</option>
    <option value="6">(6) Fine</option>
    <option value="5">(5) Average</option>
    <option value="4">(4) Bad</option>
    <option value="3">(3) Very Bad</option>
    <option value="2">(2) Horrible</option>
    <option value="1">(1) Pure Trash</option>

  </select>
	</div>
</p>


<%= link_to '<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>'.html_safe, edit_jogo_path(@jogo) %> |

<%= link_to '<span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span>'.html_safe, jogos_path %>

<h3>Reviews</h3>
<% if @jogo.present? %>
	<% @jogo.reviews.each do |reviews| %>
	  <p>
	    <b>Review:</b>
	      <%= reviews.texto %>
	  </p>
	<% end %>
<% end %>


<h3>Add Review</h3>
<%= form_for ([@jogo, @jogo.reviews.build])do |f| %>
  <div class="field">
    <%= f.label :texto %><br />
		<div class="input-group">
    <%= f.text_area :texto, id: :review_texto, class: "form-control input-sm centered-input" %>
		</div>
  </div><br />
  <div class="actions">
    <%= f.submit class: 'btn btn-default btn-sm' %>
  </div>
<% end %>
</div>
</div>
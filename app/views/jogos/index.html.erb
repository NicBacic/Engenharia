<head>
    <title>Rotten Pxls - Jogos</title>
</head>
<p id="notice"><%= notice %></p>

<h1>Jogos</h1>


<center>

  <%= form_tag(jogos_path, method: :get) do %>
    <%= text_field_tag :term, params[:term], :id => "search_box" %>
    <%= submit_tag "Search", nome: nil, :id => "search_button" %>
  <% end %>




  <%= link_to "Advanced Search", new_search_path %>

</center>

<br>

<table align="center">
<table class="table table-hover table-nonfluid">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Publisher</th>
      <th>Desenvolvedora</th>
      <th>Console</th>
      <th>Rating</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @jogos.each do |jogo| %>
      <tr>
        <div><td><%= jogo.nome %></td></div>
        <td><%= jogo.publisher %></td>
        <td><%= jogo.desenvolvedora %></td>
        <td><%= jogo.console %></td>
        <td><%= jogo.rating %></td>
        <td class="text-center"><%= link_to '<span class="glyphicon glyphicon-zoom-in" aria-hidden="true"></span>'.html_safe, jogo %></td>
        <td class="text-center"><%= link_to '<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>'.html_safe, edit_jogo_path(jogo) %></td>
        <td class="text-center"><%= link_to '<span class="glyphicon glyphicon-remove" aria-hidden="true"></span>'.html_safe, jogo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="tab">
<%= link_to '<span class="glyphicon glyphicon-home" aria-hidden="true"></span>'.html_safe, static_pages_home_path %>
  <span class="glyphicon glyphicon-option-vertical" aria-hidden="true"></span>
<%= link_to '<span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>'.html_safe, new_jogo_path %>
</div>
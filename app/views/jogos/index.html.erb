<p id="notice"><%= notice %></p>

<h1>Jogos</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Publisher</th>
      <th>Desenvolvedora</th>
      <th>Preco</th>
      <th>Rating</th>
      <th>Idaderecomendada</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jogos.each do |jogo| %>
      <tr>
        <td><%= jogo.nome %></td>
        <td><%= jogo.publisher %></td>
        <td><%= jogo.desenvolvedora %></td>
        <td><%= jogo.preco %></td>
        <td><%= jogo.rating %></td>
        <td><%= jogo.idadeRecomendada %></td>
        <td><%= link_to 'Show', jogo %></td>
        <td><%= link_to 'Edit', edit_jogo_path(jogo) %></td>
        <td><%= link_to 'Destroy', jogo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


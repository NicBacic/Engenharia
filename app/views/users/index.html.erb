<head>
<title>Users</title>
</head>

<p id="notice"><%= notice %></p>

<h1>Users</h1>

<% if @users.empty? %>
<p>
  No users registered.
</p>
<% else %>
<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>Password</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.password %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_registration_url %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>

<br>

<%= link_to 'Home', static_pages_home_path %>
<%= link_to 'New User', new_user_registration_url %>

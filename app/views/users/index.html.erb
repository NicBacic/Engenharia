<head>
<title>Rotten Pxls - Users</title>
</head>

<p id="notice"><%= notice %></p>

<h1>Users</h1>

<% if @users.empty? %>
<p>
  No users registered.
</p>
<% else %>
<table class="table table-hover table-nonfluid">
  <thead>
    <tr>
      <th>Username</th>
      <th>Email</th>
      <th>Hashed password</th>
      <th>Account activated?</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
	<td><%= user.password_digest %></td>
        <td><%= user.activated %></td>
        <td class="text-center"><%= link_to '<span class="glyphicon glyphicon-zoom-in" aria-hidden="true"></span>'.html_safe, user %></td>
        <td class="text-center"><%= link_to '<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>'.html_safe, edit_user_path(user) %></td>
        <td class="text-center"><%= link_to '<span class="glyphicon glyphicon-remove" aria-hidden="true"></span>'.html_safe, user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>

<br>
<div class="tab">
<%= link_to '<span class="glyphicon glyphicon-home" aria-hidden="true"></span>'.html_safe, static_pages_home_path %>
	<span class="glyphicon glyphicon-option-vertical" aria-hidden="true"></span>
<%= link_to '<span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>'.html_safe, new_user_path %>
</div>
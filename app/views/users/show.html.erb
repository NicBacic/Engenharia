<head>
<title>Show Users</title>
</head>

<p id="notice"><%= notice %></p>

<div class="tab">
<p>
  <strong>Username:</strong>
  <%= @user.username %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<p>
  <strong>Hashed password:</strong>
  <%= @user.password_digest %>
</p>

<%= link_to '<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>'.html_safe, edit_user_path(@user) %> |
<%= link_to '<span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span>'.html_safe, users_path %>
</div>
          <ul>
            <% user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <h3> Bug ou Recomendação? </h3>
    <%= form_for ([@user]) do |f| %>
        <%= f.label :Categoria %><br>
        <%= f.select [ "Bug", "Recomendação" ], :prompt => 'Select One',
           :selected=>@titulo%>

        <p> Descreva aqui o bug encontrado ou sua recomendação </p>

        <p class="field">
          <%= f.label :texto %>
          <%= f.text_field :texto%>
        </p>

        <p class="actions">
          <%= f.submit %>
        </p>

    <% end %>

<% end %>
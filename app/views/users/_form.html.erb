<%= form_with(model: user, local: true) do |form| %>
    <% if user.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

          <ul>
            <% user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= form.label :username %>
      </br>
    <div class="input-group">
      <%= form.text_field :username, id: :user_username, :class => "form-control input-sm" %>
      </div>
    </div>

</br>

    <div class="field">
      <%= form.label :email %>
      </br>
    <div class="input-group">
      <%= form.text_field :email, id: :user_email, :class => "form-control input-sm" %>
      </div>
    </div>

</br>

    <div class="field">
      <%= form.label :password %>
      </br>
    <div class="input-group">
      <%= form.password_field :password, :class => "form-control input-sm" %>
    </div>

</br>

    <div class="actions">
      <%= form.submit class: 'btn btn-default btn-sm' %>
    </div>
</br>
<% end %>

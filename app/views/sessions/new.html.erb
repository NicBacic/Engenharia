<head>
    <title>Rotten Pxls - Login</title>
</head>

<% provide(:title, "Log in") %>
<h1>Log in</h1>

<%= flash[:success] %>
<%= flash[:danger] %>

<br>
<br>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>

      <%= f.label :username %>
      <%= f.text_field :username, class: 'form-control', id: :username_field %>

      <%= f.label :password %>
      <%= link_to "(forgot password)", new_password_reset_path %>
      <%= f.password_field :password, class: 'form-control', id: :password_field %>

      <br><br>
      <%= f.submit "Log in", class: "btn btn-primary", id: :submit_login %>

    <% end %>

    <br>
    <%= link_to '<span class="glyphicon glyphicon-home" aria-hidden="true"></span>'.html_safe, static_pages_home_path %>

  </div>
</div>
